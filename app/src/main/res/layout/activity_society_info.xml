<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/activity_bg"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SocietyInformation.SocietyInfoActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Society Name:"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#212121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSocietyName"
                android:textSize="24sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Society's Contact:"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#212121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSocietyContact"
                android:textSize="24sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Society's Secretary Name:"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#212121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSocietySecretaryName"
                android:textSize="24sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:textStyle="normal"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Society's Secretary Contact:"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#212121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvSocietySecretaryContact"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp"
                    android:textStyle="normal"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"                    android:layout_height="wrap_content"
                    android:textSize="24sp" />

                <TextView
                android:text="Society's Chairman Name:"
                android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#212121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSocietyChairmanName"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:textStyle="normal"
                android:layout_marginEnd="16dp"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Society's Chairman Contact:"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#212121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSocietyChairmanContact"
                android:textSize="24sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:textStyle="normal"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Society's Treasurer Name:"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#212121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSocietyTreasurerName"
                android:textSize="24sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:textStyle="normal"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Society's Treasurer Contact:"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#212121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSocietyTreasurerContact"
                android:textSize="24sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:textStyle="normal"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:text="Society's Address:"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#212121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvSocietyAddress"
                android:textSize="24sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="16dp"
                android:textStyle="normal"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>