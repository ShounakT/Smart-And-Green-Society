<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/activity_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/complaintholder"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/activity_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="#FF8A80"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:text="Complaint 1"
                android:textSize="24sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/tvComplaintHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Complaint is regarding water shortage in the society. "
                android:textSize="32sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textStyle="italic"
                android:id="@+id/tvComplaintContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>